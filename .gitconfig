[rebase]
	autosquash = true
[rerere]
	enabled = true
[diff]
	algorithm = patience
[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[merge]
	conflictstyle = diff3
	tool = vim
[core]
	pager = cat
	editor = vim
[mergetool "vim"]
	cmd = vim -O $MERGED
	trustExitCode = false
